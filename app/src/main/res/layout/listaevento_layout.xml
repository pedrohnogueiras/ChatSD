<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#FFFFFF"
    android:minHeight="100dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EventoNome"
        android:id="@+id/EventoNome"
        android:textSize="16sp"
        android:layout_alignTop="@+id/dataabr"
        android:layout_toRightOf="@+id/dataabr"
        android:layout_toEndOf="@+id/dataabr"
        android:layout_marginLeft="10dp"
        android:textColor="#3c3c3c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataInicio"
        android:id="@+id/DataInicio"
        android:layout_below="@+id/EventoNome"
        android:layout_alignLeft="@+id/EventoNome"
        android:textSize="12sp"
        android:textColor="#a9a9a9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataFim"
        android:id="@+id/DataFim"
        android:layout_below="@+id/EventoNome"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:textSize="12sp"
        android:textColor="#a9a9a9" />


    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="MAR\n13"
        android:id="@+id/dataabr"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#4c73a6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/DataFim"
        android:layout_toRightOf="@+id/DataInicio"
        android:layout_toEndOf="@+id/DataInicio"
        android:textSize="12sp"
        android:textColor="#a9a9a9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local"
        android:id="@+id/local"
        android:layout_below="@+id/DataInicio"
        android:layout_alignLeft="@+id/DataInicio"
        android:layout_alignStart="@+id/DataInicio"
        android:textSize="12sp"
        android:textColor="#a9a9a9" />

</RelativeLayout>